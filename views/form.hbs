<h1>Chi tiet 1 san pham</h1>

<section class="content">
        <div class="col-md-6">
          <form action="/san-pham/{{product._id}}/edit" 
          method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label>Tên sản phẩm</label>
            <input class="form-control" type="text" name="name" value="{{product.name}}"/>
          </div>
          <div class="form-group">
            <label>Giá</label>
            <input class="form-control" type="number" name="price" value="{{product.price}}"/>
          </div>
          <div class="form-group">
            <label>Số lượng</label>
            <input class="form-control"  type="number" name="quantity" value="{{product.quantity}}" />
          </div>
          <div class="form-group">
            <label>File input</label>
            <input type="file" name="image" id="image-file" onchange="onChangeFile()">
            <img src="{{product.image}}" id="image-view"
            style="object-fit: cover;"
            width="100" height="100"/>
          </div>
          <div class="form-group">
            <label>Mô tả</label>
            <input class="form-control"  type="text" row="3" name="description" value="{{product.description}}" />
          </div>
          <div class="form-group">
            <label>Category</label>
            <select class="form-control"  type="text" name="category_id" >
              {{#each categories}}
              <option value="{{this._id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
             <label>Date:</label>
            <input  class="form-control" type="date" name="released" value="{{product.released}}"> 
            </div><!-- /.input group -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </div>
</form>
      </section><!-- /.content -->
       <script>
        const onChangeFile = () => {
        const file = document.getElementById('image-file').files[0];
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('image-view').src = e.target.result;
            document.getElementById('image-view').style.display = 'block';
        }
        reader.readAsDataURL(file);
    }
      </script>